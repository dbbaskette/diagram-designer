        {
          "label": "Data Volume",
          "key": "placeholder-key",
          "url": "https://metrics.example.com/dataflow/volume",
          "valueField": "volumeMBps"
        }
      ],
      "connectTo": [
        { "target": "DataLakehouse", "inputHandle": 0 }
      ],
      "lineType": "dashed",
      "lineColor": "#1abc9c",
      "edgeType": "curved",
      "particles": {
        "enabled": true,
        "speed": 2,
        "color": "#1abc9c",
        "count": 4,
        "direction": "source"
      },
      "handles": { "input": 1, "output": 1 }
