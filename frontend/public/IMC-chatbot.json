        {
          "label": "Storage Used",
          "key": "placeholder-key",
          "url": "https://metrics.example.com/lakehouse/storage",
          "valueField": "storageTB"
        }
      ],
      "connectTo": [],
      "lineType": "dashed",
      "lineColor": "#1abc9c",
      "edgeType": "curved",
      "particles": {
        "enabled": true,
        "speed": 2,
        "color": "#1abc9c",
        "count": 4,
        "direction": "source"
      },
      "handles": { "input": 0, "output": 1 }
