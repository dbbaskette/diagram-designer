      ],
      "connectTo": [],
      "lineType": "solid",
      "lineColor": "#27ae60",
      "edgeType": "smoothstep",
      "particles": { "enabled": false },
      "handles": { "input": 0, "output": 1 }
    },
    {
      "name": "PolicyMCPServer",
